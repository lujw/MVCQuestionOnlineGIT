@using res = Resource.Views.Shared.Shared;
@{
    string weblang = Resource.Models.Web.Web.Lang != "" ? Resource.Models.Web.Web.Lang + "." : "";
    Mvc3QA.General.GeneralConfigInfo ci = ViewBag.CI as Mvc3QA.General.GeneralConfigInfo;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" content="" />
    <title>@ViewBag.Title</title>
    <link href="@Url.Content("~/Content/themes/css/custom-theme/jquery-ui-1.8.16.custom.css")" rel="stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/bootstrap.min.css")" rel="stylesheet" type="text/css" />
    @* <link href="@Url.Content("~/Content/Styles/bootstrap-responsive.min.css")" rel="stylesheet" type="text/css" />*@
    <link href="@Url.Content("~/Content/themes/third-party/jQuery-UI-Date-Range-Picker/css/ui.daterangepicker.css")" media="screen" rel="Stylesheet" type="text/css" />
    <link href="@Url.Content("~/Content/Styles/site.css")" rel="stylesheet" type="text/css" />
    @RenderSection("CSS", false)
    <script src="@Url.Content("~/Content/bootstrap/js/jquery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/themes/js/jquery-ui-1.8.16.custom.min.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap-dropdown.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap-modal.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap-confirm.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap-tab.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap-tooltip.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap-popover.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/bootstrap-button.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/bootstrap/js/application.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/themes/third-party/jQuery-UI-Date-Range-Picker/js/date.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/themes/third-party/jQuery-UI-Date-Range-Picker/js/daterangepicker.jQuery.js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/Web.Lang." + @weblang + "js")" type="text/javascript"></script>
    <script src="@Url.Content("~/Content/js/Admin.js")" type="text/javascript"></script>
</head>
<body>
    <div class="navbar navbar-fixed-top">
        <div class="navbar-inner">
            <div class="container-fluid">
                <a class="brand" href="#">问题在线管理系统</a>
                <div class="nav-collapse">
                    <ul class="nav">
                        <li class="active">@Html.ActionLink("首页","Index","Home")</li>
                        <li><a href="#">帮助手册</a></li>
                      
                    </ul>
                    <form class="navbar-search pull-left" action="">
                    <input type="text" class="search-query span2" placeholder="搜索">
                    </form>
                    <ul class="nav pull-right">
                        @Html.Partial("_LogOnPartial")
                    </ul>
                </div>
                <!-- /.nav-collapse -->
            </div>
        </div>
        <!-- /navbar-inner -->
    </div>
    <div class="container">
        @RenderBody()
    </div>
    @RenderSection("JS", false)
</body>
</html>
