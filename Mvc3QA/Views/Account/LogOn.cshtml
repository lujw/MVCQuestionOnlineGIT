@model Mvc3QA.Models.LogOnModel
@{
    ViewBag.Title = "用户登录";
}
<div class="well ">
    <p>
        请输入您的用户密码密码. @Html.ActionLink("注册新账号", "Register")
    </p>
    @using (Html.BeginForm("LogOn", "Account", FormMethod.Post, new { @class = "form-horizontal" }))
    {
        @Html.ValidationSummary(true, "登录失败请重试", new { @class = "alert alert-block alert-error" })
        <fieldset>
            <legend>账号信息</legend>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.UserName)
                </div>
                <div class="controls">
                    @Html.TextBoxFor(m => m.UserName, new { @class = "required" })
                    @Html.ValidationMessageFor(m => m.UserName)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.Password)
                </div>
                <div class="controls">
                    @Html.PasswordFor(m => m.Password, new { @class = "required" })
                    @Html.ValidationMessageFor(m => m.Password)
                </div>
            </div>
            <div class="control-group">
                <div class="control-label">
                    @Html.LabelFor(m => m.RememberMe)
                </div>
                <div class="controls">
                    @Html.CheckBoxFor(m => m.RememberMe)
                </div>
            </div>
            <div class="form-actions">
                <input type="submit" value="登录" class="btn btn-primary" />
            </div>
        </fieldset>
    }
</div>
<script src="@Url.Content("~/Scripts/jquery.validate.min.js")" type="text/javascript"></script>
<script src="@Url.Content("~/Scripts/jquery.validate.unobtrusive.min.js")" type="text/javascript"></script>
